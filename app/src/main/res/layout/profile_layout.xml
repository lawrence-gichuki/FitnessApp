<?xml version="1.0" encoding="utf-8"?><!-- This linear layout contains a single item displayed in the MainActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/scrim"
    android:elevation="4dp"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">


    <!-- TextView that displays the goal -->
    <TextView
        android:id="@+id/goal"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="Goal: 6000 Steps" />

    <!-- TextView that displays the gender -->
    <TextView
        android:id="@+id/gender"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_light"
        tools:text="Gender: Female" />

    <!-- TextView that displays the gender -->
    <TextView
        android:id="@+id/weight"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_light"
        tools:text="Weight: 50 KG" />

    <!-- TextView that displays the gender -->
    <TextView
        android:id="@+id/height"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_light"
        tools:text="Weight: 175 CM" />


    <!-- TextView that displays the update date -->
    <TextView
        android:id="@+id/profileUpdatedAt"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        tools:text="Last Updated on 11/11/1111" />

</LinearLayout>



